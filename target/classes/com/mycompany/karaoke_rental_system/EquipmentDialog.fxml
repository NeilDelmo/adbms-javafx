<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="@equipmentdialog.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.karaoke_rental_system.EquipmentDialogController">
    <children>
        <TextField fx:id="nameField" prefHeight="42.0" prefWidth="660.0" promptText="Equipment Name" styleClass="TextField" stylesheets="@equipmentdialog.css" />
        <TextArea fx:id="descriptionField" prefHeight="100.0" promptText="Description" styleClass="TextArea" stylesheets="@equipmentdialog.css" />
        <TextField fx:id="rentalPriceField" promptText="Rental Price" styleClass="TextField" stylesheets="@equipmentdialog.css" />
        <TextField fx:id="overduePenaltyField" promptText="Overdue Penalty" styleClass="TextField" stylesheets="@equipmentdialog.css" />
        <ComboBox fx:id="statusComboBox" promptText="Status" styleClass="ComboBox" stylesheets="@equipmentdialog.css">
            <items>
            </items>
        </ComboBox>
        <HBox alignment="CENTER" spacing="10" styleClass="VBox" stylesheets="@equipmentdialog.css">
            <Button fx:id="saveButton" onAction="#handleSave" styleClass="Button" stylesheets="@equipmentdialog.css" text="Save" />
            <Button fx:id="cancelButton" onAction="#handleCancel" styleClass="Button" stylesheets="@equipmentdialog.css" text="Cancel" />
        </HBox>
    </children>
   <styleClass>
      <String fx:value="VBox" />
      <String fx:value="root" />
   </styleClass>
</VBox>
